{
    "name": "phpieces/framework",
    "type": "library",
    "description": "A simple framework built with php league components",
    "keywords": [
        "phpieces",
        "framework"
    ],
    "homepage": "https://github.com/phpieces/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Joseph Lyons",
            "email": "jclyons52@gmail.com",
            "homepage": "http://jclyons52.github.io/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "league/plates": "^3.1",
        "jclyons52/php-query": "^1.2",
        "league/container": "^2.2",
        "league/route": "^2.0",
        "zendframework/zend-diactoros": "^1.3",
        "symfony/browser-kit": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "mockery/mockery": "^0.9.5"
    },
    "autoload": {
        "psr-4": {
            "PHPieces\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPieces\\Framework\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
